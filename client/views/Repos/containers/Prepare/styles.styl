@require '../../../../base.styl'

$bodyPadding = 1.5rem

@keyframes load3
  0%
    transform: rotate(0deg)
  100%
    transform: rotate(360deg)

.root
  display: block
  left: 0
  position: absolute
  top: 0
  
  .loader
    animation: load3 1.4s infinite linear
    background: $conjureColorMain
    background: linear-gradient(to right, $conjureColorMain 10%, rgba($conjureColorMain, 0) 42%)
    border-radius: 50%
    font-size: 1rem
    height: 11rem
    margin: 5rem auto
    position: relative
    text-index: -9999rem
    transform: translateZ(0)
    width: 11rem
    
    &:before
      background: $conjureColorMain
      border-radius: 100% 0 0 0
      content: ''
      height: 50%
      left: 0
      position: absolute
      top: 0
      width: 50%
      
    &:after
      background: $white
      border-radius: 50%
      bottom: 0
      content: ''
      height: 75%
      left: 0
      margin: auto
      position: absolute
      right: 0
      top: 0
      width: 75%
