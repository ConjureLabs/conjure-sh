@require '../../../base.styl'

$bodyPadding = 1.5rem

// .root
//   padding: 10px

.header
  background: $conjureColorMain
  border-bottom: 1px solid $conjureColorMainSlightlyDark
  display: block
  height: 6rem
  
  .treeLocation
    clear: none
    float: left
    font-size: 2rem
    margin: 2rem 0 0 0
    
    .treeNav
    .separator
      clear: none
      float: left
      font-size: 1.6rem
      margin: 0.3rem 0 0 0.8rem
      
      &.treeNav:not(.current)
        cursor: pointer
      
      &.separator
        color: $conjureColorMainDark
      
    .serviceName
      color: $conjureColorMainDark
      font-size: inherit
      margin: 0

  .userNav
    clear: none
    display: block
    height: 6rem
    float: right
    position: relative
    width: 3rem + $bodyPadding + $bodyPadding

    .avatar
      display: block
      background: transparent url('/nada') no-repeat center center
      background-size: cover
      border-radius: 2rem
      height: 3rem
      position: absolute
      right: 0
      top: $bodyPadding
      width: 3rem
    
    .links
      display: none
      
    &:hover
      background: $black
      
      .links
        background: $black
        display: block
        position: absolute
        right: 0rem
        top: 6rem
        
        .link
          color: $white
          display: block
          font-size: 1.2rem
          padding: 2rem ($bodyPadding + 2rem)
          
          &:hover
            background: $trueBlack

.repo
  clear: both
  float: left
  margin-bottom: 10px

.wrap
  display: block
  max-width: 80rem
  margin: 0 auto
  padding: 0 $bodyPadding

.content
  padding: $bodyPadding 0

.onboardingContent
  display: flex
  flex-direction: column

  .branchNav
    display: block
    margin: 0 auto
    max-height: 45rem
    padding: 0 2.4rem
    overflow: scroll

    visibleScrollbar()

    .item
      border: 1px solid $blue
      display: block
      margin-bottom: 1rem

      &:last-of-type
        margin-bottom: 0

      .link
        color: $blue
        display: block
        font-weight: 400
        padding: 2rem

        &:hover
          background: $conjureColorMain

.onboarding
  display: block
  margin: 6rem 0
  text-align: center

  .label
    display: block
    font-size: 2rem
    font-weight: 500
  
  .description
    display: block
    font-size: 1.4rem
    font-weight: 200
    margin-top: 3.2rem

.listenButton
  margin: 0 auto
