@require '../../shared/framework.styl'

.header
  background: $conjureColorMain
  display: block
  width: 100%

  h1
    color: $white
    font-size: 2rem
    padding: 1.6rem 2rem
    disableSelect()

.footer
  background: $conjureColorMain
  display: block
  padding: 3.2rem 0
  text-align: center

  span
    color: rgba($white, 0.72)
    display: inline-block
    font-weight: 100
    margin-right: 1.6rem

  a
    color: $white
    display: inline-block
    margin-right: 1.6rem
  &:last-of-type
    margin-right: 0
    
  del
    color: $white
    dispaly: inline-block
    font-weight: 600
    margin-right: 1.6rem
    opacity: 0.24

.wrap
  display: block
  max-width: 80rem
  margin: 6rem auto 0

main
  padding-bottom: 6.4rem

  h2
    display: block
    font-size: 4rem
    margin-bottom: 6.4rem
    text-align: center
  
  h3
    display: block
    font-size: 2.4rem
    font-weight: 700
    margin: 3.6rem 0 1.8rem
  
  p
    display: block
    font-size: 1.6rem
    line-height: 2rem
    
  .loud
    text-transform: uppercase
      
  .label
    display: inline-block
    font-weight: 600
    margin-right: 0.8rem
    text-decoration: underline
    
  .term
    display: inline-block
    font-style: italic
    font-weight: 600

  .section
    display: block
    margin-bottom: 2.4rem
    
    .part
      display: inline-block
      margin-right: 2rem
    
    .subSection
      display: block
      margin-top: 0.6rem

      .part
        margin: 0 2rem
    
  .topNote
    display: block
    font-size: 1.6rem
    font-weight: 500
    margin-bottom: 2.4rem
  
  .reference
    text-decoration: underline

@media only screen and (max-width: 900px) 
  .wrap
    padding: 0 4rem
