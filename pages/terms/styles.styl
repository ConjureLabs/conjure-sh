@require '../../shared/framework.styl'

main
  padding-bottom: 6.4rem

  h2
    display: block
    font-size: 4rem
    margin-bottom: 6.4rem
    text-align: center
  
  h3
    display: block
    font-size: 2.4rem
    font-weight: 700
    margin: 3.6rem 0 1.8rem
  
  p
    display: block
    font-size: 1.6rem
    line-height: 2rem
    
  .loud
    text-transform: uppercase
      
  .label
    display: inline-block
    font-weight: 600
    margin-right: 0.8rem
    text-decoration: underline
    
  .term
    display: inline-block
    font-style: italic
    font-weight: 600

  .section
    display: block
    margin-bottom: 2.4rem
    
    ol
      margin: 2rem 0
      
      li
        margin-bottom: 1rem
        
        &:last-of-type
          margin-bottom: 0
    
    .part
      display: inline-block
      margin-right: 2rem
    
    .subSection
      display: block
      margin-top: 0.6rem

      .part
        margin: 0 2rem
    
  .topNote
    display: block
    font-size: 1.6rem
    font-weight: 500
    margin-bottom: 2.4rem
  
  .reference
    text-decoration: underline
