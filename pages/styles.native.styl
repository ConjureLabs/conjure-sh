@require '../shared/framework.styl'
@require '../shared/reset.styl'

html
  font-size: 62.5% // for easier rems -- 1rem ~= 10px, 2rem ~= 20px
  height: 100%

body
  color: $black
  cursor: default
  display: flex
  flex-direction: column
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Helvetica, Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol'
  font-size: 1.6rem
  min-height: 100%

a
a:visited
  color: #464cf1
  text-decoration: none
  transition: color 0.2s ease-out
a:hover
  color: #181ee1

.main
  flex-grow: 1

.footer
  background: $conjureColorMain
  display: block
  padding: 3.2rem 0
  text-align: center

  span
    color: rgba($white, 0.72)
    display: inline-block
    font-weight: 100
    margin-right: 1.6rem

  a
    color: $white
    display: inline-block
    margin-right: 1.6rem
  &:last-of-type
    margin-right: 0
    
  del
    color: $white
    dispaly: inline-block
    font-weight: 600
    margin-right: 1.6rem
    opacity: 0.24

@media only screen and (max-width: 600px)
  .footer
    span
      display: block
      margin: 0 0 1rem
    
    del:first-of-type
      display: none
