@require '../../shared/framework.styl'

.root
  position: relative

.wrap
  display: block
  max-width: 80rem
  margin: 6rem auto 0
  padding: 0 $bodyPadding
  
.paging
  text-align: center
  margin-bottom: 6rem
  
.headerContent
  flex-grow: 1

  label
    color: $conjureColorMainDark
    font-size: 1.4rem
    font-weight: 100
    margin-right: 1.4rem
    text-transform: lowercase

.viewNew
  display: flex
  flex-direction: row
  justify-content: center
  position: absolute
  top: 7.2rem
  width: 100%
  
  .button
    box-shadow: none !important
    text-transform: lowercase
    width: 20rem
