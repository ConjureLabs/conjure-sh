@require '../../shared/framework.styl'

.header
  background: $conjureColorMain
  display: block
  height: 64rem
  padding: 1.6rem 2rem
  width: 100%
  
  h1
    clear: none
    color: $conjureColorMainSlightlyDifferent
    float: left
    font-size: 2rem
    disableSelect()

.footer
  background: $conjureColorMain
  display: block
  padding: 3.2rem 0
  text-align: center

  span
    color: rgba($white, 0.72)
    display: inline-block
    font-weight: 100
    margin-right: 1.6rem

  a
    color: $white
    display: inline-block
    margin-right: 1.6rem
  &:last-of-type
    margin-right: 0
    
  del
    color: $white
    dispaly: inline-block
    font-weight: 600
    margin-right: 1.6rem
    opacity: 0.24