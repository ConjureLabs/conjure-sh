@require '../../shared/framework.styl'

.header
  background: $conjureColorMain
  display: block
  height: 64rem
  width: 100%

.navigation
  display: block
  padding: 1.6rem 2rem

  .serviceName
    clear: none
    color: $conjureColorMainSlightlyDifferent
    float: left
    font-size: 2rem
    disableSelect()

  .linkslist
    clear: none
    float: right
    
    .item
      clear: none
      float: left
      margin-left: 3rem
      
    .link
      color: $conjureColorMainSlightlyDifferent
      font-size: 1rem
      line-height: 3.2rem

@keyframes mark
  0%
    color: $conjureColorMainVeryDifferent
  25%
    color: $conjureColorMainVeryDifferent
  50%
    color: $conjureColorMainVeryDifferent
  75%
    color: $conjureColorMainVeryDifferent
  100%
    color: mix($conjureColorMain, $conjureColorMainVeryDifferent, 20%)

.ctaContainer
  display: block
  text-align: center
  
  &.standAlone
    padding: 16rem 0

  .mark
    font-size: 10rem
    font-weight: 900
    margin: 2rem auto 0
    animation-duration: 4s
    animation-name: mark
    animation-iteration-count: infinite
    animation-direction: alternate

  .firstImpression
    color: $conjureColorMainVeryDifferent
    display: block
    font-size: 4.8rem
    font-weight: 200
    margin: 5rem 0 8rem

    .name
      font-weight: 400
      margin-right: 1rem

    p
      color: $conjureColorMainSlightlyDifferent
      font-size: 2rem
      line-height: 2.4rem
      margin: 4rem auto 0
      width: 64rem

  .cta
    box-shadow: 0 0.32rem 1.6rem 0.16rem rgba(#000, 0.68)
    display: block
    margin: 0 auto
    
    &:hover
      box-shadow: 0 0.32rem 2.2rem 0.2rem rgba(#000, 0.9)
    
    .githubMark
    .label
      vertical-align: middle
    
    .githubMark
      background: transparent url(/static/images/logos/GitHub-Mark-32px.png) no-repeat center center
      background-size: cover
      display: inline-block
      height: 3.2rem
      margin-right: 1.6rem
      margin-top: -0.2rem
      width: 3.2rem
      
  &.standAlone
    .cta
      box-shadow: 0 0.32rem 1.6rem 0.16rem rgba(#000, 0.42)
      
      &:hover
        box-shadow: 0 0.32rem 2.2rem 0.2rem rgba(#000, 0.6)

  .info
    color: $conjureColorMainSlightlyDifferent
    display: block
    font-size: 1.8rem
    margin-top: 1.6rem

.trueForm
  display: none
  
.sell
  background: #fbfbfb
  border: 1px solid darken(#fbfbfb, 3%)
  border-width: 1px 0
  display: block
  height: 46rem
  margin-top: 56rem
  width: 100%
  
  > div
    display: block
    margin: 0 auto
    padding: 6rem
    width: 80rem
    
    > article
      clear: none
      display: block
      float: left
      margin-right: 14rem
      width: 32rem

      &:last-of-type
        margin-right: 0
  
  header
    display: block
    text-align: left
    
    h3
      display: block
      font-size: 2.6rem
    
    span
      display: block
      font-size: 1.4rem
      height: 9rem
      line-height: 2rem
      margin: 2.4rem 0

  ol
    display: block
    margin-top: 4rem

    li
      display: block
      margin-bottom: 3.2rem
      
      &:last-of-type
        margin-bottom: 0
      
      .gotIt
        background: #ad92ff
        border: 1px solid #ad92ff
        border-radius: 50%
        color: $white
        display: inline-block
        font-size: 2rem
        font-weight: 600
        height: 3rem
        line-height: 3rem
        margin-right: 1.4rem
        text-align: center
        width: 3rem

      .label
        color: rgba($black, 0.86)
        display: inline-block
        font-size: 2rem
        font-weight: 600

.footer
  background: $conjureColorMain
  display: block
  padding: 3.2rem 0
  text-align: center
  
  a
    color: $white
    display: inline-block
    margin-right: 1.6rem
    
    &:last-of-type
      margin-right: 0
    
  del
    color: $white
    dispaly: inline-block
    font-weight: 600
    margin-right: 1.6rem
    opacity: 0.24

@media only screen and (max-width: 900px) 
  .ctaContainer
    &.standAlone
      padding: 10rem 0

    .firstImpression
      font-size: 3rem
  
  .glimpse
    margin: 4rem auto
    transform: scale(0.8)
  
  .sell
    height: 36rem
    margin-top: 42rem

    > div
      padding: 4rem
      width: 64rem
      
      > article
        margin-right: 12rem
        width: 26rem
    
    header
      h3
        font-size: 2rem
      
      span
        font-size: 1.2rem
        height: 7.6rem
        line-height: 1.6rem
        margin: 2rem 0
        
    ol
      margin-top: 2.8rem

      li
        margin-bottom: 2.4rem
        
        .gotIt
          font-size: 1.4rem
          height: 2rem
          line-height: 2rem
          margin-right: 1.2rem
          width: 2rem

        .label
          font-size: 1.4rem
