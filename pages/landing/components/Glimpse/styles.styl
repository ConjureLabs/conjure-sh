@require '../../../../shared/framework.styl'

.root
  display: block
  width: 80rem
  height: 46rem
  background: $white
  margin: 8rem auto
  border: 1px solid $conjureColorMain
  border-radius: 3px
  box-shadow: 0 0.2rem 0.6rem rgba(#000, 0.36)
  overflow: hidden

  .toolbar
    display: block
    background: $black
    width: 100%
    height: 2.4rem

    ins
      display: inline-block
      height: 1rem
      width: 1rem
      border-radius: 100%
      margin-left: 0.76rem
      margin-top: 0.7rem

      &:nth-child(1)
        background: #ff5750
      &:nth-child(2)
        background: #ffb429
      &:nth-child(3)
        background: #25c439

  .content
    padding: 3.2rem 8rem
    position: relative

    .title
      display: block
      font-weight: bold
      color: rgba($black, 0.68)
      font-size: 2rem

    ins
      display: inline-block
      background: #25c439
      border-radius: 3px
      padding: 0.6rem
      color: $white
      font-size: 1rem
      margin-top: 0.8rem
    
    .commentWrap
      display: block
      margin-top: 1.2rem

      .author
        display: inline-block
        height: 3.2rem
        width: 3.2rem
        background: pink
        border-radius: 5px
        margin-right: 2rem
        vertical-align: top
      
      .comment
        display: inline-block
        border: 1px solid #c0d3eb
        border-radius: 3px
        overflow: hidden
        width: 32rem
        
        .header
          display: block
          font-size: 1.2rem
          background: #f1f8ff
          border-bottom: 1px solid #c0d3eb
          padding: 1rem 1.4rem
          
          .handle
            font-weight: bold
        
        .body
          display: block
          padding: 1.2rem 1.4rem
          font-size: 1.2rem
