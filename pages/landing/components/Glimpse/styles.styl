@require '../../../../shared/framework.styl'

.root
.root *
  cursor: default
  disableSelect()

.root
  display: block
  width: 80rem
  height: 46rem
  background: $white
  margin: 8rem auto
  border: 1px solid $conjureColorMain
  border-radius: 3px
  box-shadow: 0 0.2rem 0.6rem rgba(#000, 0.36)
  overflow: hidden
  position: relative

  .toolbar
    display: block
    background: $black
    width: 100%
    height: 2.4rem

    ins
      display: inline-block
      height: 1rem
      width: 1rem
      border-radius: 100%
      margin-left: 0.76rem
      margin-top: 0.7rem

      &:nth-child(1)
        background: #ff5750
      &:nth-child(2)
        background: #ffb429
      &:nth-child(3)
        background: #25c439

  .content
    padding: 3.2rem 8rem

    .title
      display: block
      font-weight: bold
      color: rgba($black, 0.68)
      font-size: 2rem
      float: left
      clear: right

    ins
      display: block
      background: #25c439
      border-radius: 3px
      padding: 0.6rem
      color: $white
      font-size: 1rem
      margin-right: 1.2rem
      float: left
      clear: none
    
    .commentWrap
      display: block
      margin-top: 1.2rem
      float: left
      clear: both
      
      &.first
        margin-top: 3.2rem

      .author
        display: inline-block
        height: 3.2rem
        width: 3.2rem
        background: url(/static/images/gh-avatar-example.jpg) no-repeat 0 0
        border-radius: 5px
        margin-right: 2rem
        vertical-align: top
        background-size: contain
      
      .comment
        display: inline-block
        border: 1px solid #c0d3eb
        border-radius: 3px
        width: 32rem
        position: relative
        
        &.fromConjure
          opacity: 0
          margin-left: 5rem
          transition: opacity 1.2s ease-out
          
          &.inViewport
            opacity: 1
        
        &:not(.fromConjure)::before
          position: absolute
          top: 9px
          left: -16px
          right: 100%
          display: block
          width: 0
          height: 0
          pointer-events: none
          content: " "
          border-color: transparent
          border-style: solid solid outset
          border-right-color: #c0d3eb
          border-width: 8px
        
        &:not(.fromConjure) .header::before
          position: absolute
          top: 9px
          left: -15px
          right: 100%
          display: block
          width: 0
          height: 0
          pointer-events: none
          content: " "
          border-color: transparent
          border-style: solid solid outset
          border-right-color: #f1f8ff
          border-width: 8px
        
        .header
          display: block
          font-size: 1.2rem
          background: #f1f8ff
          border-bottom: 1px solid #c0d3eb
          padding: 1rem 1.4rem
          position: relative

          .handle
            font-weight: bold
            margin-right: 0.4rem
        
        .body
          display: block
          padding: 1.2rem 1.4rem
          font-size: 1.2rem
          line-height: 1.6rem
          color: $gray
          
          .simulateLink
            color: #0366d6
            border-bottom: 1px solid #0366d6

    .timeline
      display: block
      padding: 1rem 0 0 7rem
      float: left
      clear: both
      opacity: 0.86

      li
        display: block
        margin: 0.4rem 0
        
        &:last-of-type
          margin-bottom: 0
        
        .author
          display: inline-block
          height: 1rem
          width: 1rem
          background: url(/static/images/gh-avatar-example.jpg) no-repeat 0 0
          background-size: contain
          border-radius: 3px
          margin-right: 0.8rem
          vertical-align: top
        
        .commit
          font-size: 0.8rem
          vertical-align: top
          color: $gray

  .rightSide
    position: absolute
    top: 11rem
    right: 8rem
    font-size: 1.2rem
    color: $gray
    opacity: 0.86

    > li
      border-bottom: 1px solid $lightGray
      padding-bottom: 1.6rem
      margin-bottom: 1.6rem
      width: 16rem
      
      &:last-of-type
        border-bottom: none
      
      .title
        display: block
        font-weight: bold
        margin-bottom: 0.8rem
        
      .teammates
        li
          display: block
          margin-bottom: 0.4rem
          
          &:last-of-type
            margin-bottom: 0
          
          .author
            display: inline-block
            height: 1rem
            width: 1rem
            background: $lightGray
            background-size: contain
            border-radius: 3px
            margin-right: 0.8rem
            vertical-align: top
          
          .handle
            vertical-align: top
