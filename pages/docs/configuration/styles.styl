@require '../../../shared/framework.styl'

h2
h3
h5
  color: $black
  display: block
  font-size: 2.4rem
  font-weight: 700
  margin-bottom: 3.6rem
h3
  font-size: 1.8rem
h5
  font-size: 1.4rem

p
  display: block
  font-size: 1.4rem
  font-weight: 100
  margin-bottom: 1.6rem

.code
  font-family: monospace
  font-weight: 400
  
.codeBlock
  display: block

  pre
    background: #eee
    color: $black
    display: inline-block
    font-family: monospace
    font-weight: 400
    margin: 1.6rem 0 3.2rem 0
    padding: 1.2rem

hr
  background: $lightGray
  border: none
  display: block
  height: 0.1rem
  margin: 3.2rem 0

.list
  display: block
  width: 20rem