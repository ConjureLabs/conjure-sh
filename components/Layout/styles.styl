@require '../../shared/framework.styl'

.page
  display: flex
  flex-direction: column
  min-height: calc(100vh)

.content
  flex-grow: 1

.footer
  background: $conjureColorMain
  display: block
  padding: 3.2rem 0
  text-align: center

  span
    color: rgba($white, 0.72)
    display: inline-block
    font-weight: 100
    margin-right: 1.6rem

  a
    color: $white
    display: inline-block
    margin-right: 1.6rem
  &:last-of-type
    margin-right: 0
    
  del
    color: $white
    dispaly: inline-block
    font-weight: 600
    margin-right: 1.6rem
    opacity: 0.24

.wrap
  display: block
  max-width: 80rem
  margin: 6rem auto 0

@media only screen and (max-width: 900px) 
  .wrap
    padding: 0 4rem

@media only screen and (max-width: 600px)
  .footer
    span
      display: block
      margin: 0 0 1rem
    
    del:first-of-type
      display: none
