@require '../../shared/framework.styl'

.root
  display: inline-block

.dropdown
  background: $white
  border: 1px solid $conjureColorMainSlightlyDifferent
  cursor: pointer
  display: block
  font-weight: 100
  font-size: 1.4rem
  padding: 1rem 1.4rem
  position: relative
  width: 12rem
  disableSelect()

.options
  display: block
  left: -1px
  max-height: calc(19.8rem + 6px) // 5.5 options, with their (5 + 1) borders
  overflow-y: scroll
  position: absolute
  top: 100%
  width: calc(100% + 2px)
    
.option
  background: $conjureColorMain
  border: 1px solid $black
  border-bottom: none
  color: $white
  display: block
  font-size: 1.4rem
  height: 3.6rem
  line-height: 3.6rem
  overflow: hidden
  padding: 0 1.4rem
  white-space: nowrap
  
  &:last-of-type
    border-bottom: 1px solid $black

  &:hover
    background: $conjureColorMainVeryDifferent
    color: $black

.mainLabel
  display: flex
  width: 100%

  &.placeholder
    color: $lightGray
    font-style: italic
    
  &.selection
    font-weight: 400

  .text
    flex-grow: 1
  
  .arrow
    color: $lightGray
