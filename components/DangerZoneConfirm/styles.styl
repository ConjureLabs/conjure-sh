@require '../../shared/framework.styl'

$paddingAmount = 4.2rem

.container
  align-items: center
  display: flex
  height: 100%
  justify-content: center
  left: 0
  position: fixed
  top: 0
  width: 100%
  z-index: $layer3

.modal
  background: #fff
  border-radius: 0.3rem
  box-shadow: 0 0.1rem 0.3rem rgba(#000, 0.16)
  display: block
  min-width: 42rem
  overflow: hidden
  z-index: $layer2
  
  header
    background: #f25353
    background: linear-gradient(to bottom right, #f25353, #f14747)
    color: $white
    display: block
    font-size: 1.8rem
    font-style: italic
    font-weight: 600
    margin-bottom: 3.6rem
    padding: 2rem $paddingAmount
    
  p
    font-size: 1.4rem
    font-weight: 200
    
    .emphasis
      font-weight: 600

  .content
    padding: 0 $paddingAmount $paddingAmount
    
    .input
      display: block
      margin: 4rem 0 3.2rem
    
    .actions
      display: flex
      flex-direction: row
      justify-content: space-between

.veil
  background: rgba(#000, 0.6)
  display: block
  height: 100%
  position: absolute
  width: 100%
  z-index: $layer1
