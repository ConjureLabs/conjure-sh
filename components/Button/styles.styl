@require '../../shared/framework.styl'

.root
  // styles have initial state of a large peach button
  border-radius: 0.3rem
  box-shadow: 0 0.1rem 0.3rem rgba(#000, 0.16)
  cursor: pointer
  disableSelect()
  display: inline-block
  gradient(#ffead3, #f9dcbd)
  height: 6.5rem
  text-align: center
  transition: box-shadow 0.2s ease-in-out
  white-space: nowrap
  width: 29rem
  
  &.disabled
    cursor: default
    opacity: 0.42
    pointer-event: none
  
  &.hallow
    background: none
    border: 1px solid #ffead3

  &:hover
    box-shadow: 0 0.2rem 0.6rem rgba(#000, 0.2)

  .label
    color: #575653
    font-size: 2.4rem
    font-weight: bold
    line-height: 6.5rem

  /**
    Color alterations
  **/
  &.color_black
    gradient(rgba(#5d5d5d, 0.72), rgba(#3a3a3a, 0.72))
    
    &.hallow
      background: none
      border: 1px solid #5d5d5d
      
      .label
        color: #5d5d5d

    &:hover
      gradient(rgba(#5d5d5d, 0.72), rgba(#3a3a3a, 0.86))
      
      &.hallow
        background: rgba(#5d5d5d, 0.14)

    .label
      color: #ddd

  &.color_white
    gradient(#fff, darken(#fff, 8%))

    &.hallow
      background: none
      border: 1px solid #fff

      .label
        color: #fff

    &:hover
      gradient(#fff, darken(#fff, 10%))
      
      &.hallow
        background: rgba(#fff, 0.14)

    .label
      color: $black
  
  &.color_gray
    gradient(rgba(#bbbbbb, 0.72), rgba(#a8a8a8, 0.72))
    
    &.hallow
      background: none
      border: 1px solid #bbbbbb
      
      .label
        color: $gray

    &:hover
      gradient(#bbbbbb, #a8a8a8)
      
      &.hallow
        background: rgba(#bbbbbb, 0.14)

    .label
      color: $white
      
  &.color_pink
    gradient(#FF8EDE, darken(#FF8EDE, 4%))
    
    &.hallow
      background: none
      border: 1px solid #FF8EDE
      
      .label
        color: #FF8EDE
    
    .label
      color: $black
      
  &.color_purple
    gradient(#fed3ff, #c2a3d2)
    border: 1px solid #c2a3d2
    
    &.hallow
      background: none
      
      .label
        color: #c2a3d2
    
    .label
      color: #503a4b
  
  &.color_blue
    gradient(#6567a2, darken(#6567a2, 4%))
    
    &.hallow
      background: none
      border: 1px solid #6567a2
      
      .label
        color: #6567a2
    
    .label
      color: $white

  /**
    Size alterations
  **/
  &.size_small
    height: 3.2rem
    width: 9rem
    
    .label
      font-size: 1rem
      font-weight: normal
      line-height: 3.2rem
  
  &.size_medium
    height: 4.8rem
    width: 18rem
    
    .label
      font-size: 1.4rem
      font-weight: 400
      line-height: 4.8rem