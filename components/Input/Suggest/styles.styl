@require '../../../shared/framework.styl'

.suggestions
  background: #f3f3f3
  box-shadow: 0 0.2rem 0.6rem rgba($trueBlack, 0.12)
  display: block

  > li
    background: transparent
    border: 1px solid $lightGray
    border-top: none
    cursor: pointer
    font-size: 1.4rem
    padding: 0.6rem 0.4rem
    
    &:hover
    &.highlighted
      background: #cfffbf
