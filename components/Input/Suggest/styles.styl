@require '../../../shared/framework.styl'

.suggestions
  background: #f3f3f3
  box-shadow: 0 0.2rem 0.6rem rgba($trueBlack, 0.12)
  display: block
  max-width: 100%
  overflow-x: hidden
  position: absolute
  width: 100%
  z-index: $layer1

  > li
    background: transparent
    border: 1px solid $lightGray
    border-top: none
    cursor: pointer
    font-size: 1.4rem
    padding: 0.6rem 0.4rem
    
    &.highlighted
      background: #cfffbf
