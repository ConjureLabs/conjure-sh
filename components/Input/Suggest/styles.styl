@require '../../../shared/framework.styl'

.suggestions
  background: #242431
  box-shadow: 0 0.2rem 0.6rem rgba($trueBlack, 0.24)
  color: $trueWhite
  display: block
  left: 0
  margin-top: -1px
  max-width: 100%
  overflow-x: hidden
  position: absolute
  width: 100%
  z-index: $layer1

  > li
    background: transparent
    border-bottom: 1px solid $trueBlack
    cursor: pointer
    font-size: 1.2rem
    line-height: 1.6rem
    padding: 0.8rem 0.6rem
    
    &:last-of-type
      border-bottom: none
    
    &.highlighted
      background: #6567a2
